<launch>
  <arg name="gui" default="true" />
  <arg name="sim" default="false" />

  <param name="/use_sim_time" value="$(arg sim)" />

  <arg name="model" value="$(find aimen_workcell)/urdf/workcell.xacro" />
  <param name="robot_description" command="$(find xacro)/xacro.py $(arg model)" />

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

  <include file="$(find aimen_driver)/launch/robot_interface.launch" unless="$(arg sim)">
    <arg name="robot_ip" value="172.20.0.100" />
    <arg name="J23_coupled" value="true" />
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find aimen_workcell)/config/workcell.rviz" required="true" if="$(arg gui)" />
</launch>
