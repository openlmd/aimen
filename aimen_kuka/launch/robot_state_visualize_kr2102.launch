<!--
Manipulator specific version of the state visualizer.
Defaults provided for KR 210-2:
Usage:
robot_state_visualize_kr2102.launch robot_ip:=<value>
-->
<launch>
    <arg name="robot_ip" />

    <rosparam command="load" file="$(find aimen_kuka)/config/joint_names_kr2102.yaml" />

    <include file="$(find aimen_driver)/launch/robot_interface.launch">
        <arg name="robot_ip" value="$(arg robot_ip)" />
    </include>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <include file="$(find aimen_kuka)/launch/load_kr2102.launch" />

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find industrial_robot_client)/config/robot_state_visualize.rviz" required="true" />
</launch>
